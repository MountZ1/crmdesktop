<%- include('template/template') %>
<div class="container mx-auto">
    <h1 class="text-2xl font-bold text-center">Dashboard</h1>
    <hr class="m-6">
    <div class="flex flex-col space-y-4">
        <!-- Tabel pertama -->
        <div class="bg-white p-4 rounded-lg shadow-md border w-full">
            <p class="text-center font-bold mb-2">Data Barang Terlaris</p>
            <div class="overflow-x-auto">
                <table class="table-auto min-w-full">
                    <thead>
                        <tr class="bg-gray-100">
                            <th class="text-center p-2 font-medium">No</th>
                            <th class="text-center p-2 font-medium">Nama</th>
                            <th class="text-center p-2 font-medium">Kode barang</th>
                            <th class="text-center p-2 font-medium">Terjual</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% terlaris.forEach((tr, index) => { %>
                        <tr>
                            <td class="p-2 text-center"><%= index+1 %></td>
                            <td class="p-2 text-center"><%= tr.komponen_name %></td>
                            <td class="p-2 text-center"><%= tr.kode %></td>
                            <td class="p-2 text-center"><%= tr.total %></td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    
        <!-- Tabel kedua -->
        <div class="bg-white p-4 rounded-lg shadow-md border w-full">
            <p class="text-center font-bold mb-2">Data Barang Stock Terkecil</p>
            <div class="overflow-x-auto">
                <table class="table-auto min-w-full">
                    <thead>
                        <tr class="bg-gray-100">
                            <th class="text-center p-2 font-medium">No</th>
                            <th class="text-center p-2 font-medium">Nama</th>
                            <th class="text-center p-2 font-medium">Kode barang</th>
                            <th class="text-center p-2 font-medium">Stock</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% stockSedikit.forEach((tr, index) => { %>
                            <tr>
                                <td class="p-2 text-center"><%= index+1 %></td>
                                <td class="p-2 text-center"><%= tr.komponen_name %></td>
                                <td class="p-2 text-center"><%= tr.kode %></td>
                                <td class="p-2 text-center"><%= tr.stock %></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<%- include('template/footer') %>
